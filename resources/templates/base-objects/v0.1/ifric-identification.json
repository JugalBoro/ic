{
  "$schema": "http://json-schema.org/schema#",
  "$schemaVersion": "0.0.1",
  "$id": "base-objects/v0.1/ifric-identification",
  "title": "Ifric Identification",
  "description": "Asset details related to IFRIC.",
  "type": "object",
  "visible": true,
  "properties": {
    "asset_manufacturer_name": {
      "id": "base-objects-v0.1-ifric-identification-asset-manufacturer-name",
      "type": "string",
      "title": "Asset manufacturer name",
      "placeholder": "Auto fill from ICID",
      "description": "The manufacturer name is generated after the manufacturer registration",
      "readOnly": false,
      "visible": true
    },
    "urn_id": {
      "id": "base-objects-v0.1-ifric-identification-urn-id",
      "type": "string",
      "title": "URN-ID",
      "placeholder": "Auto fill from PDT",
      "description": "Automatically generated by PDT (Auto Fill from PDT)",
      "readOnly": false,
      "visible": true
    },
    "ifric_id_manufacturer": {
      "id": "base-objects-v0.1-ifric-identification-ifric-id-manufacturer",
      "type": "string",
      "title": "IFRIC-ID of manufacturer",
      "placeholder": "Auto fill from ICID",
      "description": "ID is generated after manufacturer registration from ICID",
      "readOnly": false,
      "visible": true
    },
    "ifric_id_asset": {
      "id": "base-objects-v0.1-ifric-identification-ifric-id-asset",
      "type": "string",
      "title": "IFRIC-ID of asset",
      "placeholder": "Auto fill from ICID",
      "description": "Globally unique identifiable ID generated by ICID",
      "readOnly": false,
      "visible": true
    },
    "asset_category": {
      "id": "base-objects-v0.1-ifric-identification-asset-category",
      "type": "array",
      "title": "Assetkategorie und ECLASS IRDI",
      "placeholder": "Auto fill from default",
      "description": "Assetkategorie und ECLASS IRDI",
      "default": ["36 Machine, apparatus", "0173-1#01-AAD302#007"],
      "readOnly": false,
      "visible": true
    },
    "logo_manufacturer": {
      "id": "base-objects-v0.1-ifric-identification-logo-manufacturer",
      "type": "object",
      "title": "Logo Manufacturer",
      "contentEncoding": "base64",
      "contentMediaType": "image/png",
      "placeholder": "Auto fill from ICID",
      "description": "Link for logo of the manufacturer",
      "readOnly": false,
      "visible": true
    }
  },
  "required": [
    "asset_manufacturer_name",
    "urn_id",
    "ifric_id_manufacturer",
    "ifric_id_asset",
    "asset_category"
  ]
}